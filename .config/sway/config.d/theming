# Mouse cursor
seat seat0 xcursor_theme Bibata-Modern-Ice 24

# GTK app settings
exec_always {
    gsettings set $gnome-schema gtk-theme 'Skeuos-Cyan-Dark'
    gsettings set $gnome-schema icon-theme 'Tela-dark'
    gsettings set $gnome-schema cursor-theme 'Bibata-Modern-Ice'
    gsettings set $gnome-schema font-name 'Cantarell 11'
}

# Client focused/not focused colours
client.focused $color1 $background_color $foreground_color $color1 $color1
client.unfocused $color2 $background_color $foreground_color $color1 $color2
